{
  "extends": [
    "stylelint-config-sass-guidelines",
    "stylelint-config-recommended-scss"
  ],
  "rules": {
    "indentation": "tab",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extends", "ignores"]
      }
    ],
    "font-family-name-quotes": "always-where-required"
  }
}
